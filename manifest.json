{
	"name": "LearnAwesome",
	"version": "1.0",
	"description": "Best learning resources from the web",
	"manifest_version": 2,

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},

	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["storage.js"]
	}],

    "browser_action": {
      "default_popup": "popup.html",
      "default_title": "Add or Search on LearnAwesome",
      "default_icon": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      }
    },

    "options_page": "options.html",

    "icons": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    },

	"permissions": [
		"contentSettings",
		"system.storage",
		"cookies",
		"tabs",
		"activeTab",
		"http://*/*"
	]
}