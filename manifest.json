{
	"name": "LearnAwesome",
	"version": "1.0",
	"description": "Best learning resources from the web",
	"manifest_version": 2,

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Add or Search on LearnAwesome",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },

  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },

	"permissions": [
		"activeTab"
	]
}